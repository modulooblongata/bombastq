<div class="row">
  <div id="profile-avatar" class="col-md-3 text-center">
    <%= image_tag @user.profile.avatar.url %>
  </div>
  <div class="col-md-6">
    <h1><%= @user.profile.display_name %></h1>
    <h3><span class="rank-icon"><%= rank_icon %></span> <%= @user.profile.rank %></h3>
    <div class="well profile-block profile-description">
      <h3>About</h3>
      <%= @user.profile.description %>
    </div>
    <% if current_user.plan_id == 2 %>
    <div class="well profile-block profile-description">
      <h3>Contact Info</h3>  
      <%= @user.profile.contact_email %>
    </div>
    <% end %>
  </div>
</div>